<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Space contains text -->
    <!-- PinEntryEditText has error set -->
    <item android:state_active="true" android:drawable="@drawable/ic_group_4">
    </item>
    <item android:state_checked="true" android:state_focused="true" android:drawable="@drawable/ic_group_4">
    </item>
    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true" android:drawable="@drawable/ic_group_5">
    </item>
    <!--Space contains text and not focused -->
    <item android:state_focused="false" android:state_checked="true" android:drawable="@drawable/ic_group_4">
    </item>
    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true" android:drawable="@drawable/ic_group_5">
    </item>
    <!-- PinEntryEditText is not focused -->
    <item android:drawable="@drawable/ic_group_5">

    </item>

</selector>