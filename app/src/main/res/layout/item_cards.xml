<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginTop="9dp"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="9dp"
    android:elevation="2dp"
    android:background="@drawable/shape_item_loans"
    tools:ignore="UnusedAttribute">

    <ImageView
        android:id="@+id/iv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_22dp"
        android:layout_marginTop="@dimen/dimens_27dp"
        android:layout_marginBottom="@dimen/dimens_27dp"
        android:src="@drawable/ic_icon_item_cards"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16dp"
        android:layout_marginTop="@dimen/dimens_27dp"
        android:layout_marginEnd="@dimen/dimens_10dp"
        android:layout_toStartOf="@+id/iv_menu"
        android:layout_toEndOf="@+id/iv_card"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/iv_card"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:text="Master Card"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_6dp"
            android:text="Card 4357***"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimens_15dp"
        android:layout_marginEnd="@dimen/dimens_12dp"
        android:padding="@dimen/dimens_10dp"
        android:src="@drawable/ic_icon_menu" />


</RelativeLayout>